<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>%>


    <form class="needs-validation" action="/products/<%=foundProduct._id%>/?_method=PATCH" method="POST" novalidate>
        <div>
            <label for="naam">Name: </label>
            <input type="text" name="name" id="naam" value="<%=foundProduct.name%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please Enter a Name
            </div>
        </div>
        <div>
            <label for="pic">Img: </label>
            <input type="text" name="img" id="pic" value="<%=foundProduct.img%>">
        </div>
        <div>
            <label for="daam">Price: </label>
            <input type="text" name="price" id="daam" value="<%=foundProduct.price%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please Enter a Price
            </div>
        </div>
        <div>
            <label for="description">Desc: </label>
            <textarea rows = "3" name="desc" id="description"><%= foundProduct.desc %></textarea>
        </div>
        <button type="submit">Edit</button>
    </form>


<script src="/public/js/script.js"></script>

<%-include('../partials/footer')%>
