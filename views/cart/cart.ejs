<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>%>


<section class="container">

    <h1 class="display-6">My Cart</h1>

    <div class="row">
        <div class="col-7">
            <% for(let item of user.cart){ %>
                <div class="card mx-auto m-3">
                    <div class="row">
                        <div class="col-4">
                            <img class="img-fluid rounded-start" src="<%= item.img %>" alt="" style = "width: 275px; max-height: 275px;">
                        </div>

                        <div class="col-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=item.name%>
                                </h5>
                                <p><%= item.desc %></p>

                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <div class="col-lg-4 mx-auto">
            <ul>
              <% for(let item of user.cart){ %>
              <li><span> <%=item.name%> --&gt; $ <%=item.price%> </span></li>
              <% } %>
              <li>Total Amount: $  <%=totalAmount%></li>
            </ul>
            <a href="/checkout"><button class="btn btn-sm btn-success">Checkout</button></a>
          </div>
        </div>
    </div>

</section>








<%-include('../partials/footer')%>
